<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/multi_action_preference_drawable_button_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.android.car.ui.uxr.DrawableStateButton
        android:id="@+id/multi_action_preference_drawable_button"
        android:background="@android:color/transparent"
        android:defaultFocusHighlightEnabled="false"
        android:textColor="@color/car_ui_text_color_primary"
        android:textSize="@dimen/car_ui_sub1_size"
        android:ellipsize="none"
        android:singleLine="true"
        android:layout_width="@dimen/multi_action_preference_drawable_button_width"
        android:layout_height="@dimen/multi_action_preference_drawable_button_height"
        android:layout_marginTop="@dimen/multi_action_preference_drawable_button_margin"
        android:layout_marginBottom="@dimen/multi_action_preference_drawable_button_margin"
        android:layout_marginStart="@dimen/multi_action_preference_drawable_button_margin"
        android:layout_marginEnd="@dimen/multi_action_preference_drawable_button_margin"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/multi_action_preference_drawable_button_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/car_ui_text_color_primary"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:indeterminate="true"/>
</FrameLayout>


